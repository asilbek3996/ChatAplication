<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_signup"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:layout_gravity="center"
            android:layout_marginTop="62dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/smdapp" />
        </FrameLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardBackgroundColor="#8858B4DD"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/edt_password"
                android:backgroundTint="#7558B4DD"
                android:background="#7558B4DD"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:hint="Enter your name"
                android:paddingLeft="13dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardBackgroundColor="#7558B4DD"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/edt_password"
                android:backgroundTint="#7558B4DD"
                android:background="#7558B4DD"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:hint="Enter email @gmail.com"
                android:paddingLeft="13dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardBackgroundColor="#7558B4DD"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:paddingLeft="13dp"
                android:inputType="numberPassword"
                android:layout_height="match_parent"
                android:hint="Enter password"
                android:layout_gravity="top"
                android:background="#7558B4DD"
                android:backgroundTint="#7558B4DD"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="italic"/>

        </androidx.cardview.widget.CardView>






        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#A343ABDA"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            app:cardMaxElevation="8dp">
            <TextView
                android:id="@+id/btn_SignUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Sign Up"
                android:textStyle="italic|bold"
                android:textSize="18sp"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
